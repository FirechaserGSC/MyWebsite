<% include partials/header %>

	<div class="container">

		<div class="row">
			<% blogs.forEach(function(blog) { %>
				<div>
						<h2>
							<a href="/blogs/<%= blog.dashedTitle %>">
								<%=blog.title%>
							</a>
						</h2>
						<img src="<%= blog.image %>">
						<span><%= blog.createdTime.toDateString() %></span>
						<p><%= blog.body.substring(0, 100) %>...<p>
						<a href="/blogs/<%= blog._id %>">Read More</a>
				</div>
			<% }); %>


		</div>

	</div>

<% include partials/footer %>
