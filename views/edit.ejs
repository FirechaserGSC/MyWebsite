<% include partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Edit <%= blog.title %></h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<label for="">Title</label>
					<input class="form-control" type="text" name="blog[title]" value="<%= blog.title %>">
				</div>
				<div class="form-group">
					<label for="">Image</label>
					<input class="form-control" type="text" name="blog[image]" value="<%= blog.image %>">
				</div>
        <div class="form-group">
					<label for="">Blog content</label>
					<textarea class="form-control" name="blog[body]" rows="10"><%= blog.body %></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
				</div>
			</form>
			<a href="/blogs">Go back</a>
		</div>

	</div>
</div>
<% include partials/footer %>
